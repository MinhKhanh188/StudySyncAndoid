<!--res/values/instagram_style-->
<resources>

    <!-- EditText style -->
    <style name="LoginEditText">
        <item name="android:layout_height">57dp</item>
        <item name="android:background">@drawable/round_background_while10_5</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#CCFFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Password field variation -->
    <style name="LoginPasswordEditText" parent="LoginEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- Login Button style -->
    <style name="LoginButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ins_text_color_at_login_button</item>
        <item name="android:background">@drawable/button_white_border</item>
    </style>

    <!-- Light TextView -->
    <style name="LoginHintText">
        <item name="android:textColor">#CCFFFFFF</item>
    </style>

    <!-- Bold White Text -->
    <style name="LoginBoldText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
