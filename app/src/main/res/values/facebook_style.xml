<!--res/values/facebook_style-->
<resources>
    <style name="FacebookEditText">
        <item name="android:textColor">@color/fb_light_gray</item>
        <item name="android:textColorHint">@color/fb_sady_gray</item>
        <item name="android:backgroundTint">@color/fb_light_gray</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/sharp_rectangular_button</item>
        <item name="android:textColor">@color/fb_medium_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FacebookTextButton">
        <item name="android:textColor">@color/fb_light_gray</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FacebookTextView">
        <item name="android:textColor">@color/fb_sady_gray</item>
    </style>
</resources>

